{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "disableWorkspaceFolders": true,
      "initializationOptions": {
        "usePlaceholders": true,
        "buildFlags": ["-tags=e2e"]
      }
    }
  },
  "yaml.schemas":{
    "kubernetes": "/*.yaml"
  }
}
